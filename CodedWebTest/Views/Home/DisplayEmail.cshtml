@{
    ViewData["Title"] = "Display Email";
}
<style>
    .center-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        text-align: center;
    }
</style>

<div class="center-content">

    <h1>Email Information</h1>

    @if (!string.IsNullOrEmpty(ViewBag.Email))
    {
        <p>Email: @ViewBag.Email</p>
    }
    else
    {
        <p>No email found.</p>
    }

    <a href="/">Go to Home Page</a>

</div>
